@{
  Layout = "_Layout";
}
<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
}
@foreach (var category in Model)
{
  <h3><a href='/categories/@category.GetId()'>@category.GetName()</a></h3>
}
<p><a href='/items'>Back home</a></p>
<form action="/categories/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
